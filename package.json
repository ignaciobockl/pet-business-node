{
  "name": "pet-business-backend",
  "version": "0.0.11",
  "description": "",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsc && node --env-file=.env.development --watch --loader ts-node/esm --experimental-specifier-resolution=node --no-warnings src/app.ts",
    "jest": "dotenv -e .env.test -- jest -i --watch --detectOpenHandles",
    "jest:all": "dotenv -e .env.test -- jest -i --watchAll",
    "jest:coverage": "dotenv -e .env.test -- jest -i --coverage",
    "lint": "npx tsx ./config/pre-build.ts --ignore-build",
    "prepare": "husky",
    "prepare-project": "node --loader ts-node/esm config/prepare-project.ts",
    "prettier": "prettier --write \"src/**/*.ts\"",
    "prettier:check": "prettier --check \"src/**/*.ts\"",
    "prisma:generate": "npx prisma generate",
    "prisma:migrate": "dotenv -e .env.development -- npx prisma migrate dev",
    "prisma:migrate-test": "dotenv -e .env.test npx prisma migrate deploy",
    "start": "node dist/app.js",
    "test": "tsc --noEmit --pretty && pnpm lint-staged --allow-empty",
    "update": "ncu",
    "update:check": "ncu --interactive --format group"
  },
  "keywords": [],
  "author": "Ignacio Bockl",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^5.14.0",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dayjs": "^1.11.11",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "pino": "^9.2.0",
    "pino-pretty": "^11.2.1",
    "uuid": "^9.0.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@commitlint/cli": "19.2.1",
    "@commitlint/config-angular": "19.1.0",
    "@faker-js/faker": "^8.4.1",
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/gradient-string": "^1.1.6",
    "@types/jest": "^29.5.12",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.12.12",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^7.9.0",
    "@typescript-eslint/parser": "^7.0.0",
    "dotenv-cli": "^7.4.2",
    "eslint": "8.57.0",
    "eslint-config-airbnb": "19.0.4",
    "eslint-config-airbnb-typescript": "^18.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-simple-import-sort": "^12.1.0",
    "gradient-string": "^2.0.2",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "prisma": "^5.14.0",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.4",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.4.5",
    "zod-prisma-types": "^3.1.8"
  },
  "engines": {
    "node": ">=20.6.1",
    "npm": "please-use-pnpm",
    "pnpm": ">9.0.0",
    "yarn": "please-use-pnpm"
  },
  "lint-staged": {
    "*.ts": [
      "jest --passWithNoTests",
      "eslint --fix",
      "prettier --write"
    ],
    "*.{html,css,md,json}": [
      "prettier --write"
    ]
  }
}
